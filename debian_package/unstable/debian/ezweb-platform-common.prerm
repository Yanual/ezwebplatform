#!/bin/bash

if [ "$1" == "remove" ]; then
  # Disable all EzWeb instances
  INSTANCES=`/usr/sbin/update-ezweb-platform list enabled`

  for conf_name in $INSTANCES; do
    /usr/sbin/update-ezweb-platform disable $conf_name
  done
fi

# Remove python object files
find /usr/share/ezweb-platform -name "*.pyc" -delete

# Remove
rm -rf /var/lib/ezweb-platform

#DEBHELPER#

exit 0
