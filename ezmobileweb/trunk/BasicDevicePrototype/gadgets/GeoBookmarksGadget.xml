<?xml version="1.0" encoding="utf-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>GeoBookmarks</Name>
    <Version>1.0</Version>
    <Author>jjmr</Author>
    <Mail>jjmr@tid.es</Mail>
    <Description>Almacena una lista de contactos con asociándoles a los mismos una ubicación</Description>
    <ImageURI>http://jjmr-desktop/ezweb-platform/repository/map.jpg</ImageURI>
    <WikiURI>http://trac.morfeo-project.org/trac/ezwebplatform/wiki/BandejaDeAverias</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
  </Platform.Preferences>
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
	<Property name="geobookmarks" type="text" label="geobookmarks"/>
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
	<Slot name="bookmarkName" type="text" label="Name" friendcode="name"/>
	<Slot name="addressSlot" type="text" label="Address" friendcode="address"/>
	<Slot name="utmCoordSlot" type="text" label="UTM Coord." friendcode="utmCoord" description="UTM X Y Coordinates and precision (optional), comma separated"/>
	<Event name="addressEvent" type="text" label="Address" friendcode="address"/>
	<Event name="utmCoordEvent" type="text" label="UTM Coord." friendcode="utmCoord" description="UTM X Y Coordinates and precision (optional), comma separated"/>
  </Platform.Wiring>

  <Platform.Link>
    <XHTML href="http://jjmr-desktop/ezweb-platform/repository/GeoBookmarksGadget.html"/>
  </Platform.Link>
  <Platform.Rendering width="6" height="12"/>
</Template>

